<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="../css/style.css">
    <title>Campgrounds</title>
</head>
<body>
    <%- include('../partials/navbar')-%>
    <%- include('../partials/alerts')-%>
    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>All Campgrounds</h1>
                <p>
                    <a href="/campgrounds/new" class="btn btn-primary btn-large">Add a New Campground</a>
                </p>
            </div>
        </header>
        <div class="row">
            <div class="col-lg-12">
                <h3>Our Most Popular Site</h3>
            </div>
            <div class="row text-center" id="cards">
                <% camps.forEach((camp) =>{ %>
                <div class="col-md-3 col-sm-6">
                    <div class="img-thumbnail">
                            <img src="<%=camp.image%>"> 
                            <div class="caption">
                                <h4><strong><%=camp.name%></strong></h4>
                            </div>
                            <a href="/campgrounds/<%=camp._id%>" class="btn btn-primary">More Info</a>      
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
        
        </br>
        <a href="/" class="btn btn-outline-secondary">Back to landing page</a>
        <footer>TM YelpCamp 2020</footer>
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>